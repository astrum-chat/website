---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Astrum - Private AI Chat">
	<main>
		<!-- Hero Section -->
		<section class="hero">
			<img src="/logo.svg" alt="Astrum Logo" class="logo" />
			<h1>Astrum</h1>
			<p class="tagline">A simple, private, cross-platform app for chatting with AI</p>
			<div class="cta-buttons">
				<a href="#download" class="btn btn-primary">Download</a>
				<a href="https://github.com/astrum-chat/astrum" class="btn btn-secondary">GitHub</a>
			</div>
		</section>

		<!-- Features Section -->
		<section class="features">
			<div class="feature">
				<div class="feature-icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
						<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
					</svg>
				</div>
				<h3>Private & Local</h3>
				<p>All conversations stay on your device. Your data never leaves your computer.</p>
			</div>
			<div class="feature">
				<div class="feature-icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/>
						<path d="M20 3v4"/>
						<path d="M22 5h-4"/>
					</svg>
				</div>
				<h3>Multi-Provider</h3>
				<p>Connect to Anthropic, OpenAI, or run local models with Ollama.</p>
			</div>
			<div class="feature">
				<div class="feature-icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<rect x="2" y="3" width="20" height="14" rx="2"/>
						<line x1="8" x2="16" y1="21" y2="21"/>
						<line x1="12" x2="12" y1="17" y2="21"/>
					</svg>
				</div>
				<h3>Cross-Platform</h3>
				<p>Native apps for macOS, Linux, and Windows.</p>
			</div>
		</section>

		<!-- Demo Section -->
		<section class="demo">
			<img src="/demo.png" alt="Astrum App Screenshot" class="demo-image" />
		</section>

		<!-- Download Section -->
		<section id="download" class="download">
			<h2>Download</h2>
			<p class="download-subtitle">Choose your platform</p>

			<!-- Recommended download for current OS -->
			<div class="recommended-download" id="recommended-download" style="display: none;">
				<a href="" id="recommended-link" class="download-btn recommended">
					<span id="recommended-icon"></span>
					<span id="recommended-text"></span>
				</a>
			</div>

			<p class="other-platforms-label" id="other-platforms-label" style="display: none;">Other platforms</p>
