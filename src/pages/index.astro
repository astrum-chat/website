	function detectOS() {
		const userAgent = navigator.userAgent.toLowerCase();
		const platform = navigator.platform.toLowerCase();

		if (platform.includes('mac') || userAgent.includes('mac')) {
			return 'macos';
		} else if (platform.includes('win') || userAgent.includes('win')) {
			return 'windows';
		} else if (platform.includes('linux') || userAgent.includes('linux')) {
			return 'linux';
		}
		return null;
	}

	function setupRecommendedDownload() {
		const os = detectOS();
		if (!os) return;

		const recommendedDownload = document.getElementById('recommended-download');
		const recommendedLink = document.getElementById('recommended-link');
		const recommendedIcon = document.getElementById('recommended-icon');
		const recommendedText = document.getElementById('recommended-text');
		const otherPlatformsLabel = document.getElementById('other-platforms-label');

		if (!recommendedDownload || !recommendedLink || !recommendedIcon || !recommendedText) return;

		const config = {
			macos: { icon: macIcon, name: 'macOS', url: 'https://github.com/astrum-chat/astrum/releases/latest' },
			linux: { icon: linuxIcon, name: 'Linux', url: 'https://github.com/astrum-chat/astrum/releases/latest' },
			windows: { icon: windowsIcon, name: 'Windows', url: 'https://github.com/astrum-chat/astrum/releases/latest' }
		};

		const { icon, name, url } = config[os];

		recommendedIcon.innerHTML = icon;
		recommendedText.textContent = `Recommended (${name})`;
		recommendedLink.href = url;
		recommendedDownload.style.display = 'flex';
		recommendedDownload.style.justifyContent = 'center';
		if (otherPlatformsLabel) {
			otherPlatformsLabel.style.display = 'block';
		}
	}

	document.addEventListener('DOMContentLoaded', setupRecommendedDownload);
</script>
